<Window x:Class="AutoShopCoursework.CarEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные автомобиля" Height="367" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Бренд:"/>
            <TextBox Name="txtBrand" Margin="0,5,0,10" Height="25"/>

            <TextBlock Text="Модель:"/>
            <TextBox Name="txtModel" Margin="0,5,0,10" Height="25"/>

            <TextBlock Text="Год выпуска:"/>
            <TextBox Name="txtYear" Margin="0,5,0,10" Height="25"/>

            <TextBlock Text="Цена:"/>
            <TextBox Name="txtPrice" Margin="0,5,0,15" Height="25"/>

            <Button Content="Сохранить" Click="BtnSave_Click" Height="35" Background="LightBlue"/>
        </StackPanel>
    </Grid>
</Window>