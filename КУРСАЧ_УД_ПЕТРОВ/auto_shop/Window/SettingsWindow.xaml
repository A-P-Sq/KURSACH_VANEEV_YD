<Window x:Class="auto_shop.Window.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки подключения" Height="466" Width="350" 
        WindowStartupLocation="CenterScreen" Background="#F4F7F9" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Настройка базы данных ☠" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2D5A9E"/>

            <TextBlock Text="Хост (IP адрес):" Foreground="#78909C"/>
            <TextBox x:Name="txtHost" Margin="0,5,0,10" Height="28" VerticalContentAlignment="Center"/>

            <TextBlock Text="Порт:" Foreground="#78909C"/>
            <TextBox x:Name="txtPort" Margin="0,5,0,10" Height="28" VerticalContentAlignment="Center"/>

            <TextBlock Text="Пользователь:" Foreground="#78909C"/>
            <TextBox x:Name="txtUser" Margin="0,5,0,10" Height="28" VerticalContentAlignment="Center"/>

            <TextBlock Text="Пароль:" Foreground="#78909C"/>
            <PasswordBox x:Name="txtPass" Margin="0,5,0,10" Height="28" VerticalContentAlignment="Center"/>

            <TextBlock Text="Имя базы данных:" Foreground="#78909C"/>
            <TextBox x:Name="txtDb" Margin="0,5,0,20" Height="28" VerticalContentAlignment="Center"/>

            <Button Content="Сохранить настройки ✔" Click="BtnSave_Click" Height="35" 
                    Background="#2D5A9E" Foreground="White" FontWeight="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>